<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <system.serviceModel>
    <services>
      <service name="OOP_step_130_WCF_MagicEightBallServiceLib.MagicEightBallService">
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8080/MagicEightBallService"/>
            <add baseAddress="net.tcp://localhost:8099/MagicEightBallService"/>
          </baseAddresses>
        </host>
      </service>      
    </services>
    <bindings>
      <basicHttpBinding>
        <binding openTimeout="00:00:30"/>
      </basicHttpBinding>
      <netTcpBinding>
        <binding closeTimeout="00:00:15"/>
      </netTcpBinding>
    </bindings>    
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <!--Для получения стандартного MEX не именуйте элемент <serviceMetadata>-->
          <serviceMetadata httpGetEnabled="true"/>
        </behavior>
      </serviceBehaviors>      
    </behaviors>
  </system.serviceModel>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
    </startup>
</configuration>