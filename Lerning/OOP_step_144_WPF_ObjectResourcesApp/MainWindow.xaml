<Window x:Class="OOP_step_144_WPF_ObjectResourcesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP_step_144_WPF_ObjectResourcesApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Horizontal">
        <Button Background="{StaticResource myBrush}" Name="Ok" Margin="25" Height="200" Width="200" Content="Ok" FontSize="30" BorderThickness="3" BorderBrush="BlueViolet" Click="Ok_OnClick"/>
        <Button Background="{DynamicResource myBrush}" Name="Cancel" Margin="25" Height="200" Width="200" Content="Cancel" FontSize="30" BorderThickness="3" BorderBrush="BlueViolet" Click="Cancel_OnClick"/>
    </StackPanel>
</Window>
