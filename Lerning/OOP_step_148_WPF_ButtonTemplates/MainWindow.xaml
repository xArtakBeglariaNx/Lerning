<Window x:Class="OOP_step_148_WPF_ButtonTemplates.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP_step_148_WPF_ButtonTemplates"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Horizontal">
        <Button x:Name="myButton" Height="100" Width="100" Click="myButton_Click" Content="Howdy!" Style="{StaticResource RoundButtonStyle}"/>
        <Button x:Name="myButton1" Height="100" Width="100" Background="Green" Content="Ok!" Style="{StaticResource RoundButtonStyle}"/>
        <Button x:Name="myButton2" Height="100" Width="100" Background="Aquamarine" Content="Cancel!" Style="{StaticResource RoundButtonStyle}"/>
    </StackPanel>
</Window>
